<Window x:Class="IcoConverter.MainWindow"
        Background="AliceBlue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IcoConverter"
        mc:Ignorable="d"
        Title="Ico Converter" Height="350" Width="800">
    <!--<Window.DataContext>
        <local:IcoConverterViewModel />
    </Window.DataContext>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnConvert" Background="LightSlateGray"  Content="Convert Image" Grid.Column="2"  Grid.ColumnSpan="2" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnConvert_Click"  FontSize="24" FontFamily="Consolas" Width="200" Height="40"/>
        <Label Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Grid.Row="0" Content="Input:"/>
        <TextBox x:Name="inutPath" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="0" FontSize="20" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="File Path" VerticalAlignment="Center" Width="520" GotFocus="inutPath_GotFocus"/>
        <Label Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Grid.Row="1" Content="Output:"/>
        <TextBox x:Name="outputPath" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1" FontSize="20" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Output Path" VerticalAlignment="Center" Width="520" GotFocus="outputPath_GotFocus"/>
        <Label Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Grid.Row="2" Content="Size:"/>
        <ComboBox Grid.Column="1" Grid.Row="2" ItemsSource="{Binding IcoSize}" SelectedIndex="0" HorizontalAlignment="Left" Text="Size" VerticalAlignment="Center" Width="120"/>
        <TextBlock x:Name="txtMsg" IsEnabled="False" TextWrapping="Wrap" Text="{Binding Message, Mode=TwoWay}" Grid.Column="1" Grid.ColumnSpan="4" Background="WhiteSmoke" Grid.Row="3"/>
    </Grid>
</Window>
