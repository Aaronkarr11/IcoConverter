<Window x:Class="IcoConverter.MainWindow"
        Background="AliceBlue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IcoConverter"
        mc:Ignorable="d"
        Title="Ico Converter" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Convert Image" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top" Height="47" Width="217" Click="Button_Click" FontSize="24" FontFamily="Consolas" Margin="0,16,0,0"/>
        <Label Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Grid.Row="0" Content="Input:"/>
        <TextBox Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="0" FontSize="20" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="File Path" VerticalAlignment="Center" Width="520"/>
        <Label Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Grid.Row="1" Content="Output:"/>
        <TextBox Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1" FontSize="20" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Output Path" VerticalAlignment="Center" Width="520"/>

    </Grid>
</Window>
